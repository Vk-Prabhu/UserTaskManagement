@model TaskManagementSystem.BAL.Models.LoginModel
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            background: hsla(50, 68%, 93%, 1);
            background: linear-gradient(90deg, hsla(50, 68%, 93%, 1) 0%, hsla(18, 88%, 66%, 1) 50%, hsla(288, 55%, 55%, 1) 100%);
            background: -moz-linear-gradient(90deg, hsla(50, 68%, 93%, 1) 0%, hsla(18, 88%, 66%, 1) 50%, hsla(288, 55%, 55%, 1) 100%);
            background: -webkit-linear-gradient(90deg, hsla(50, 68%, 93%, 1) 0%, hsla(18, 88%, 66%, 1) 50%, hsla(288, 55%, 55%, 1) 100%);
            filter: progid: DXImageTransform.Microsoft.gradient( startColorstr="#F9F5E0", endColorstr="#F5895C", GradientType=1 );
        }

        .login-container {
            width: 100%;
            max-width: 400px;
            margin: 50px auto;
            background-color: #ffffff;
            padding: 30px;
            box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.1);
            border-radius: 10px;
        }

            .login-container h1 {
                text-align: center;
                margin-bottom: 30px;
                font-size: 24px;
                color: #343a40;
            }

        .form-group {
            margin-bottom: 20px;
        }

        .btn-primary {
            width: 100%;
            padding: 10px;
            font-size: 16px;
        }

        .form-text {
            text-align: center;
            margin-top: 20px;
        }

            .form-text a {
                color: #007bff;
                text-decoration: none;
            }

                .form-text a:hover {
                    text-decoration: underline;
                }
    </style>
</head>
<body>

    <div class="login-container">
        <h1>Login Form</h1>
        <form method="post" asp-controller="Account" asp-action="Login">
            <div class="form-group">
                <label asp-for="Username">Username<span style="color:red">*</span></label>
                <input type="text" asp-for="Username" class="form-control" placeholder="Enter your username" required />
            </div>
            <div class="form-group">
                <label asp-for="Password">Password<span style="color:red">*</span></label>
                <input type="password" asp-for="Password" class="form-control" placeholder="Enter your password" required />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-primary">Login</button>
            </div>
            <div class="form-text">
                <p>Not Registered? <a href="@Url.Action("Register","Account")">Create an account</a></p>
            </div>
        </form>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
